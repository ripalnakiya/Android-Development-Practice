<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:gravity="center">

        <Button
            android:id="@+id/sendMessageButton"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:backgroundTint="#2196F3"
            android:text="Send Message"
            android:textSize="20sp" />

        <Button
            android:id="@+id/removeMessageButton"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:backgroundTint="#00BCD4"
            android:text="Remove Message"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:gravity="center">

        <Button
            android:id="@+id/sendRefRunnableButton"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:backgroundTint="#2196F3"
            android:text="Send Ref Runnable"
            android:textSize="20sp" />

        <Button
            android:id="@+id/removeRefRunnableButton"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:backgroundTint="#00BCD4"
            android:text="Remove Ref Runnable"
            android:textSize="20sp" />

    </LinearLayout>

    <Button
        android:id="@+id/sendRunnableButton"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:backgroundTint="#2196F3"
        android:text="Send Runnable"
        android:textSize="20sp" />

    <Button
        android:id="@+id/removeAllButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:backgroundTint="#E91E63"
        android:text="Remove All"
        android:textSize="20sp" />

</LinearLayout>